{% extends 'base.html.twig' %}

{% block title %}Usuario{% endblock %}

{% block body %}
    <h1>Usuario</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ usuario.id }}</td>
            </tr>
            <tr>
                <th>Nome</th>
                <td>{{ usuario.nome }}</td>
            </tr>
            <tr>
                <th>UserName</th>
                <td>{{ usuario.userName }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ usuario.email }}</td>
            </tr>
            <tr>
                <th>Ativo</th>
                <td>{{ usuario.ativo ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Acessos</th>
                <td>{{ usuario.acessos }}</td>
            </tr>
            <tr>
                <th>QtdAcessos</th>
                <td>{{ usuario.qtdAcessos }}</td>
            </tr>
            <tr>
                <th>UltimoLogin</th>
                <td>{{ usuario.ultimoLogin ? usuario.ultimoLogin|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ usuario.roles ? usuario.roles|join(', ') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_usuario_index') }}">back to list</a>

    <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">edit</a>

    {{ include('usuario/_delete_form.html.twig') }}
{% endblock %}
