{% extends 'base.html.twig' %}

{% block title %}Usuario index{% endblock %}

{% block body %}
    <h1>Usuario index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Nome</th>
                <th>UserName</th>
                <th>Email</th>
                <th>Ativo</th>
                <th>Acessos</th>
                <th>QtdAcessos</th>
                <th>UltimoLogin</th>
                <th>Roles</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for usuario in usuarios %}
            <tr>
                <td>{{ usuario.id }}</td>
                <td>{{ usuario.nome }}</td>
                <td>{{ usuario.userName }}</td>
                <td>{{ usuario.email }}</td>
                <td>{{ usuario.ativo ? 'Yes' : 'No' }}</td>
                <td>{{ usuario.acessos }}</td>
                <td>{{ usuario.qtdAcessos }}</td>
                <td>{{ usuario.ultimoLogin ? usuario.ultimoLogin|date('Y-m-d') : '' }}</td>
                <td>{{ usuario.roles ? usuario.roles|join(', ') : '' }}</td>
                <td>
                    <a href="{{ path('app_usuario_show', {'id': usuario.id}) }}">show</a>
                    <a href="{{ path('app_usuario_edit', {'id': usuario.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="10">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_usuario_new') }}">Create new</a>
{% endblock %}
